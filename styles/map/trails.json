{"layers": [
{
  "id": "trails-shadow",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "line": {
    "line-cap": "butt",
    "line-join": "miter"
  },
  "paint": {
    "line-color": "hsla(0, 0, 100%, 1)",
    "line-width": {
      "stops": [[8, 4], [12, 6]]
    },
    "line-blur": {
      "stops": [[8, 2], [10, 4], [16, 10]]
    }
  }
},
{
  "id": "trails-zoomed-out-outline",
  "source": "$source",
  "source-layer": "trails-zoomed-out",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "round",
    "line-round-limit": 1.02
  },
  "paint": {
    "line-color": "rgba(250,250,250,1)",
    "line-width": 3,
    "line-opacity": {
      "stops": [[8, 0], [8.25, 0.5], [9.75, 1]]
    }
  },
  "filter": ["all", ["in", "type", "hike", "horse"], [">", "distance", 3000]]
},
{
  "id": "trails-core-line",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "round"
  },
  "paint": {
    "line-color": {
      "base": 1,
      "stops": [[8, "hsla(111, 14%, 39%, 1)"], [12, "hsla(111, 14%, 19%, 1)"]]
    },
    "line-width": {
      "base": 1,
      "stops": [[6, 1], [16, 1.5]]
    },
    "line-dasharray": {
      "base": 1,
      "stops": [[10, [3, 1]], [16, [4, 1]]]
    }
  }
},
{
  "id": "trails-zoomed-out",
  "source": "$source",
  "source-layer": "trails-zoomed-out",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(0,103,14)",
    "line-width": 1,
    "line-dasharray": {
      "stops": [[6, [1, 1]], [8, [2, 1]], [9, [4, 1]], [11, [10000, 0]]]
    },
    "line-opacity": {
      "base": 1,
      "stops": [[0, 0.2], [7, 0.4], [9, 1]]
    }
  },
  "filter": ["all", ["in", "type", "hike", "horse"], [">", "distance", 3000]]
},
{
  "id": "bike-core-line",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "before": "hedges",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(160,160,160)",
    "line-width": 1
  },
  "filter": ["all", ["in", "type", "bike"], ["!=", "name", ""]]
},
{
  "id": "bike-zoomed-out",
  "source": "$source",
  "source-layer": "trails-zoomed-out",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(160,160,160)",
    "line-width": 1,
    "line-dasharray": {
      "stops": [[6, [1, 1]], [8, [2, 1]], [9, [1, 0]]]
    },
    "line-opacity": {
      "base": 1,
      "stops": [[0, 0.2], [7, 0.4], [9, 0.6]]
    }
  },
  "filter": ["all", ["in", "type", "bike"], [">", "distance", 3000]]
},
{
  "id": "atv-and-motorcycle-core-line",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "before": "roads",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(180,180,180,1)",
    "line-width": 1,
    "line-dasharray": [2, 1]
  },
  "filter": ["any", ["in", "type", "atv", "motorcycle"], ["==", "name", ""]]
},
{
  "id": "trails-preview",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "before": "handles-outline",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "interactive": true,
  "paint": {
    "line-color": [
      "case",
      ["boolean", ["feature-state", "preview"], false],
      "#FF9100",
      "transparent"
    ],
    "line-width": 2
  }
},
{
  "id": "trails",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "paint": {
    "line-color": "transparent",
    "line-width": 8
  },
  "interactive": true,
  "filter": ["in", "type", "hike", "horse", "bike", "atv", "motorcycle", "trail"]
},
{
  "id": "endpoints",
  "source": "$source",
  "source-layer": "trail-endpoints",
  "type": "symbol",
  "minzoom": 10,
  "layout": {
    "icon-image": "diamond",
    "icon-size": {
      "stops":[[10, 0.75], [16, 1.5]]
    },
    "icon-allow-overlap": false
  }
},
{
  "id": "trails-selected-outline",
  "source": "trails-selected",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "#FFF",
    "line-width": 4
  },
  "interactive": true
},
{
  "id": "trails-selected",
  "source": "trails-selected",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "#FF9100",
    "line-width": 2
  },
  "interactive": true
},
{
  "id": "trail-labels",
  "source": "$source",
  "source-layer": "trail-labels",
  "type": "symbol",
  "layout": {
    "text-field": "{name}",
    "symbol-placement": "line",
    "text-size": {"stops": [[12, 10], [14, 12]]},
    "text-max-angle": 180,
    "symbol-spacing": 500
  },
  "paint": {
    "text-color": "rgba(0,0,0,1)",
    "text-halo-color": "hsla(0, 0%, 100%, 100%)",
    "text-halo-width": 1
  },
  "filter": ["all", ["in", "type", "hike", "horse"], ["!=", "name", ""]]
},
{
  "id": "trail-labels-zoomed-out",
  "source": "$source",
  "source-layer": "trail-labels-zoomed-out",
  "type": "symbol",
  "layout": {
    "text-field": "{name}",
    "symbol-placement": "line",
    "text-size": {"stops": [[9, 8], [12, 10]]},
    "text-max-angle": 180,
    "symbol-spacing": 500
  },
  "paint": {
    "text-color": "rgba(0,33,4,1)",
    "text-halo-color": "hsla(0, 0%, 100%, 100%)",
    "text-halo-width": 1
  },
  "filter": ["all", ["in", "type", "hike", "horse"], ["!=", "name", ""]]
},
{
  "id": "handles",
  "source": "handles",
  "type": "symbol",
  "layout": {
    "icon-image": "handle",
    "icon-size": 0.75,
    "icon-allow-overlap": true,
    "icon-rotate": ["number", ["get", "rotation"]]
  }
}]}
