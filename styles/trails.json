{"layers": [{
  "id": "trails-outline",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "before": "trails-core-line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(250,250,250,1)",
    "line-width": 3
  },
  "filter": ["all", ["in", "type", "hike", "horse", "bike", "trail"], ["!=", "name", ""]]
},
{
  "id": "trails-zoomed-out-outline",
  "source": "$source",
  "source-layer": "trails-zoomed-out",
  "type": "line",
  "before": "trails-core-line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(250,250,250,1)",
    "line-width": 3,
    "line-opacity": {
      "stops": [[8, 0], [8.25, 0.5], [9.75, 1]]
    }
  },
  "filter": ["all", ["in", "type", "hike", "horse"], [">", "distance", 3000]]
},
{
  "id": "trails-core-line",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(0,103,14,1)",
    "line-width": 1,
    "line-dasharray": {
      "stops": [[9, [4, 1]], [10, [10000000, 0]]]
    }
  }
},
{
  "id": "trails-zoomed-out",
  "source": "$source",
  "source-layer": "trails-zoomed-out",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(0,103,14)",
    "line-width": 1,
    "line-dasharray": {
      "stops": [[6, [1, 1]], [8, [2, 1]], [9, [4, 1]], [11, [10000, 0]]]
    },
    "line-opacity": {
      "base": 1,
      "stops": [[0, 0.2], [7, 0.4], [9, 1]]
    }
  },
  "filter": ["all", ["in", "type", "hike", "horse"], [">", "distance", 3000]]
},
{
  "id": "bike-core-line",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "before": "hedges",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(160,160,160)",
    "line-width": 1
  },
  "filter": ["all", ["in", "type", "bike"], ["!=", "name", ""]]
},
{
  "id": "bike-zoomed-out",
  "source": "$source",
  "source-layer": "trails-zoomed-out",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(160,160,160)",
    "line-width": 1,
    "line-dasharray": {
      "stops": [[6, [1, 1]], [8, [2, 1]], [9, [1, 0]]]
    },
    "line-opacity": {
      "base": 1,
      "stops": [[0, 0.2], [7, 0.4], [9, 0.6]]
    }
  },
  "filter": ["all", ["in", "type", "bike"], [">", "distance", 3000]]
},
{
  "id": "atv-and-motorcycle-core-line",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "before": "roads",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(180,180,180,1)",
    "line-width": 1,
    "line-dasharray": [2, 1]
  },
  "filter": ["any", ["in", "type", "atv", "motorcycle"], ["==", "name", ""]]
},
{
  "id": "trails-preview",
  "source": "$sourceHover",
  "source-layer": "trails",
  "filter": ["in", "id", 0],
  "type": "line",
  "before": "handles-outline",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "interactive": true,
  "paint": {
    "line-color": "#FF9100",
    "line-width": 2
  }
},
{
  "id": "trails",
  "source": "$source",
  "source-layer": "trails",
  "type": "line",
  "paint": {
    "line-color": [
      "case",
      ["boolean", ["feature-state", "preview"], false],
      "red",
      "transparent"
    ],
    "line-width": 4
  },
  "interactive": true,
  "filter": ["in", "type", "hike", "horse", "bike", "atv", "motorcycle", "trail"]
},
{
  "id": "trails-selected-outline",
  "source": "trails-selected",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "#FFF",
    "line-width": 4
  },
  "interactive": true
},
{
  "id": "trails-selected",
  "source": "trails-selected",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "#FF9100",
    "line-width": 2
  },
  "interactive": true
},
{
  "id": "handles-outline",
  "source": "handles",
  "type": "circle",
  "paint": {
    "circle-radius": 6,
    "circle-color": "#FFF"
  },
  "interactive": true
},
{
  "id": "trail-labels",
  "source": "$source",
  "source-layer": "trail-labels",
  "type": "symbol",
  "layout": {
    "text-field": "{name}",
    "symbol-placement": "line",
    "text-size": {"stops": [[12, 10], [14, 12]]},
    "text-max-angle": 180,
    "symbol-spacing": 500
  },
  "paint": {
    "text-color": "rgba(0,33,4,1)",
    "text-halo-color": "hsla(0, 0%, 100%, 100%)",
    "text-halo-width": 1
  },
  "filter": ["all", ["in", "type", "hike", "horse"], ["!=", "name", ""]]
},
{
  "id": "trail-labels-zoomed-out",
  "source": "$source",
  "source-layer": "trail-labels-zoomed-out",
  "type": "symbol",
  "layout": {
    "text-field": "{name}",
    "symbol-placement": "line",
    "text-size": {"stops": [[9, 8], [12, 10]]},
    "text-max-angle": 180,
    "symbol-spacing": 500
  },
  "paint": {
    "text-color": "rgba(0,33,4,1)",
    "text-halo-color": "hsla(0, 0%, 100%, 100%)",
    "text-halo-width": 1
  },
  "filter": ["all", ["in", "type", "hike", "horse"], ["!=", "name", ""]]
},
{
  "id": "handles-center",
  "source": "handles",
  "type": "circle",
  "paint": {
    "circle-radius": 4,
    "circle-color": "#FF9100"
  }
},
{
  "id": "handles",
  "source": "handles",
  "type": "circle",
  "paint": {
    "circle-radius": 8,
    "circle-color": "rgba(0,0,0,0)"
  }
}]}
