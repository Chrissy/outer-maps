{"layers": [
{
  "id": "trails-outline",
  "source": "$source",
  "source-layer": "trailsgeojson",
  "type": "line",
  "before": "trails-core-line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(250,250,250,1)",
    "line-width": 3
  },
  "filter": ["all", ["in", "type", "hike", "horse", "bike", "trail"], ["!=", "name", ""]]
},
{
  "id": "trails-core-line",
  "source": "$source",
  "source-layer": "trailsgeojson",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(0,103,14,1)",
    "line-width": 1
  },
  "filter": ["all", ["in", "type", "hike", "trail", "horse"], ["!=", "name", ""]]
},
{
  "id": "trails-zoomed-out",
  "source": "$source",
  "source-layer": "trailszoomedoutgeojson",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(0,103,14,1)",
    "line-width": 1,
    "line-opacity": {
      "base": 1,
      "stops": [[0, 0.2], [7, 0.4], [9, 0.6]]
    }
  },
  "filter": ["all", ["in", "type", "hike", "horse"], [">", "distance", 3000]]
},
{
  "id": "bike-core-line",
  "source": "$source",
  "source-layer": "trailsgeojson",
  "type": "line",
  "before": "hedges",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(160,160,160)",
    "line-width": 1
  },
  "filter": ["all", ["in", "type", "bike"], ["!=", "name", ""]]
},
{
  "id": "bike-zoomed-out",
  "source": "$source",
  "source-layer": "trailszoomedoutgeojson",
  "type": "line",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgb(160,160,160)",
    "line-width": 1
  },
  "filter": ["all", ["in", "type", "bike"], [">", "distance", 3000]]
},
{
  "id": "atv-and-motorcycle-core-line",
  "source": "$source",
  "source-layer": "trailsgeojson",
  "type": "line",
  "before": "roads",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "rgba(180,180,180,1)",
    "line-width": 1,
    "line-dasharray": [2, 1]
  },
  "filter": ["any", ["in", "type", "atv", "motorcycle"], ["==", "name", ""]]
},
{
  "id": "trails-preview",
  "source": "$source",
  "source-layer": "trailsgeojson",
  "filter": ["in", "id", 0],
  "type": "line",
  "before": "handles-outline",
  "line": {
    "line-cap": "round",
    "line-join": "bevel"
  },
  "paint": {
    "line-color": "#FF9100",
    "line-width": 2
  }
},
{
  "id": "trails",
  "source": "$source",
  "source-layer": "trailsgeojson",
  "type": "line",
  "paint": {
    "line-color": "transparent",
    "line-width": 15
  },
  "filter": ["in", "type", "hike", "horse", "bike", "atv", "motorcycle", "trail"]
},
{
  "id": "trail-labels",
  "source": "$source",
  "source-layer": "traillabelsgeojson",
  "type": "symbol",
  "layout": {
    "text-field": "{name}",
    "symbol-placement": "line",
    "text-size": {"stops": [[10, 9], [12, 11]]},
    "text-max-angle": 180,
    "symbol-spacing": 500
  },
  "paint": {
    "text-color": "rgba(0,33,4,1)",
    "text-halo-color": "hsla(0, 0%, 100%, 100%)",
    "text-halo-width": 1
  },
  "filter": ["all", ["in", "type", "hike", "horse"], ["!=", "name", ""]]
},
{
  "id": "trail-labels-zoomed-out",
  "source": "$source",
  "source-layer": "traillabelszoomedoutgeojson",
  "type": "symbol",
  "layout": {
    "text-field": "{name}",
    "symbol-placement": "line",
    "text-size": {"stops": [[11, 9], [12, 11]]},
    "text-max-angle": 180,
    "symbol-spacing": 500
  },
  "paint": {
    "text-color": "rgba(0,33,4,1)",
    "text-halo-color": "hsla(0, 0%, 100%, 100%)",
    "text-halo-width": 1,
    "text-halo-blur": 0.5
  },
  "filter": ["all", ["in", "type", "hike", "horse"], ["!=", "name", ""]]
}
]}
